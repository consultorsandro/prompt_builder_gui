            Rectangle {
                background: #e8f5e8;
                border-radius: 12px;
                border-width: 2px;
                border-color: #a5d6a7;
                drop-shadow-blur: 6px;
                drop-shadow-color: #00000015;
                width: 40%;
                
                VerticalLayout {
                    spacing: 10px;
                    padding-left: 20px;
                    padding-right: 5px;
                    padding-top: 20px;
                    padding-bottom: 20px;

                    Text {
                        text: "📄 Preview do Prompt";
                        font-size: 20px;
                        font-weight: 600;
                        color: #1b5e20;
                        horizontal-alignment: center;
                    }

                    ScrollView {
                        Rectangle {
                            background: white;
                            border-radius: 4px;
                            padding: 10px;
                            
                            Text {
                                text: preview_text;
                                font-size: 12px;
                                wrap: word-wrap;
                                color: black;
                                width: 100%;
                            }
                        }
                    }
                }
            }
        }

        // Bottom Action Bar
        Rectangle {
            background: #ffffff;
            border-radius: 8px;
            border-width: 1px;
            border-color: #e0e0e0;
            drop-shadow-blur: 4px;
            drop-shadow-color: #00000010;
            height: 70px;
            
            HorizontalLayout {
                spacing: 15px;
                padding-left: 15px;
                padding-right: 20px;
                padding-top: 15px;
                padding-bottom: 15px;
                alignment: center;
                
                Button {
                    text: "� Gerar Prompt";
                    clicked => { generate_prompt(); }
                    preferred-width: 150px;
                    height: 40px;
                }
                
                Button {
                    text: "💾 Salvar";
                    clicked => { save_prompt(); }
                    preferred-width: 120px;
                    height: 40px;
                }
                
                Button {
                    text: "📋 Copiar";
                    clicked => { copy_to_clipboard(); }
                    preferred-width: 120px;
                    height: 40px;
                }
                
                Button {
                    text: "🗑️ Limpar Tudo";
                    clicked => { clear_all(); }
                    preferred-width: 140px;
                    height: 40px;
                }
            }
        }
    }
